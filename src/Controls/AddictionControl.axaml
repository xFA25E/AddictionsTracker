<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AddictionsTracker.Controls.AddictionControl">
  <Border
      Tapped="border_Tapped"
      Background="White"
      BorderBrush="Black"
      BorderThickness="0,0,1,1"
      >
    <Border.ContextMenu>
      <ContextMenu>
        <MenuItem Header="Add Failure" Command="{Binding InsertFailureCommand}"/>
        <MenuItem Header="Edit" Command="{Binding UpdateCommand}"/>
        <MenuItem Header="Delete" Command="{Binding DeleteCommand}"/>
        <MenuItem Header="Move Up" Command="{Binding MoveUpCommand}"/>
        <MenuItem Header="Move Down" Command="{Binding MoveDownCommand}"/>
        <MenuItem Header="Close Menu"/>
      </ContextMenu>
    </Border.ContextMenu>
    <TextBlock Padding="8" Text="{Binding Title}"/>
  </Border>
</UserControl>
