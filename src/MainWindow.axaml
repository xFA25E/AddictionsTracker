<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="800"
        x:Class="AddictionsTracker.MainWindow"
        Title="AddictionsTracker"
        MinWidth="1024" MinHeight="800" Width="1024" Height="800" WindowStartupLocation="CenterScreen">
  <ScrollViewer HorizontalScrollBarVisibility="Auto">
    <Grid
        Name="grid"
        ColumnDefinitions="Auto,Auto"
        RowDefinitions="Auto"
        VerticalAlignment="Stretch"
        HorizontalAlignment="Stretch"
        Background="White"
        PointerWheelChanged="grid_PointerWheelChanged"
        >
      <Border BorderBrush="Black" BorderThickness="0,0,1,1">
        <Button
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            Click="insertAddiction"
            Content="Add Addiction"
            />
      </Border>
    </Grid>
  </ScrollViewer>
</Window>
